{
  "name": "tf-nav",
  "displayName": "tf-nav (Terraform Navigator)",
  "description": "Navigate Terraform configurations with a structured tree view",
  "version": "0.1.1",
  "publisher": "owenrumney",
  "icon": "./media/logo.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/owenrumney/tf-nav"
  },
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Other", "Visualization"
  ],
  "keywords": [
    "terraform",
    "infrastructure",
    "navigation",
    "hcl"
  ],
  "activationEvents": [
    "onLanguage:terraform"
  ],
  "main": "./build/src/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "terraform-navigator",
          "title": "Terraform Navigator",
          "icon": "./resources/icons/terraform-nav-dark.svg"
        }
      ]
    },
    "views": {
      "terraform-navigator": [
        {
          "id": "tfnavTree",
          "name": "Terraform Navigator",
          "when": "workspaceFolderCount > 0"
        }
      ]
    },
    "commands": [
      {
        "command": "tfnav.refreshIndex",
        "title": "Refresh Index",
        "category": "Terraform Navigator",
        "icon": "$(refresh)"
      },
      {
        "command": "tfnav.reveal",
        "title": "Reveal in Editor",
        "category": "Terraform Navigator",
        "icon": "$(go-to-file)"
      },
      {
        "command": "tfnav.copyAddress",
        "title": "Copy Terraform Address",
        "category": "Terraform Navigator",
        "icon": "$(copy)"
      },
      {
        "command": "tfnav.switchViewMode",
        "title": "Switch View Mode",
        "category": "Terraform Navigator",
        "icon": "$(list-tree)"
      },
      {
        "command": "tfnav.showGraph",
        "title": "Show Dependency Graph",
        "category": "Terraform Navigator",
        "icon": "$(circuit-board)"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "tfnav.refreshIndex",
          "when": "view == tfnavTree",
          "group": "navigation"
        },
        {
          "command": "tfnav.switchViewMode",
          "when": "view == tfnavTree",
          "group": "navigation"
        },
        {
          "command": "tfnav.showGraph",
          "when": "view == tfnavTree",
          "group": "navigation"
        }
      ],
      "view/item/context": [
        {
          "command": "tfnav.reveal",
          "when": "view == tfnavTree",
          "group": "navigation"
        },
        {
          "command": "tfnav.copyAddress",
          "when": "view == tfnavTree",
          "group": "navigation"
        },
        {
          "command": "tfnav.showGraph",
          "when": "view == tfnavTree",
          "group": "navigation"
        }
      ]
    },
    "configuration": {
      "title": "Terraform Navigator",
      "properties": {
        "tfnav.viewMode": {
          "type": "string",
          "enum": [
            "file",
            "type"
          ],
          "default": "type",
          "description": "How to organize the tree view: by file or by resource type"
        },
        "tfnav.includeDataSources": {
          "type": "boolean",
          "default": true,
          "description": "Include data sources in the tree view"
        },
        "tfnav.ignore": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": [
            "**/.terraform/**"
          ],
          "description": "Glob patterns for files/directories to ignore when discovering Terraform files"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "build": "webpack --mode production",
    "build:dev": "webpack --mode development",
    "compile": "tsc -p ./",
    "lint": "eslint ./src",
    "lint:fix": "eslint ./src --fix",
    "check:deps": "eslint . --rule 'import/no-extraneous-dependencies: error' --no-inline-config",
    "format:check": "prettier --check .",
    "format": "prettier --write .",
    "watch": "tsc -watch -p ./",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage"
  },
  "devDependencies": {
    "@eslint/js": "^9.19.0",
    "@types/jest": "^29.5.5",
    "@types/node": "16.x",
    "@types/vscode": "^1.74.0",
    "eslint": "^9.19.0",
    "eslint-import-resolver-typescript": "^3.8.5",
    "eslint-plugin-import": "^2.31.0",
    "jest": "^29.7.0",
    "prettier": "^3.5.3",
    "ts-jest": "^29.1.1",
    "typescript": "^4.9.5",
    "typescript-eslint": "^8.23.0",
    "webpack": "^5.98.0",
    "webpack-cli": "^6.0.1"
  },
  "prettier": {
    "endOfLine": "lf",
    "printWidth": 80,
    "semi": true,
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "es5",
    "overrides": [
      {
        "files": [
          "*.json",
          "*.js"
        ],
        "options": {
          "printWidth": 120
        }
      }
    ]
  },
  "dependencies": {
    "hcl2-parser": "^1.0.3"
  }
}
